{
  "manifest_version": 3,
  "name": "ZenSocial",
  "description": "Extension pour rendre YouTube, Instagram et TikTok plus calmes : cacher contenus indésirables…",
  "version": "1.1",

  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "*://www.youtube.com/*",
    "*://www.tiktok.com/*"
  ],

  "action": {
    "default_title": "Réglages ZenFocus",
    "default_popup": "options/options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["scripts/youtube.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["scripts/instagram.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://www.tiktok.com/*"],
      "js": ["scripts/tiktok.js"],
      "run_at": "document_idle"
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}