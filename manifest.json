{
  "manifest_version": 3,
  "name": "ZenTube",
  "description": "Extension pour rendre YouTube plus calme : cacher Shorts, commentaires, suggestionsâ€¦",
  "version": "1.0.0",

  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "*://www.youtube.com/*"
  ],

  "action": {
    "default_title": "ZenTube",
    "default_popup": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
